<h1>Log In</h1>

<%= form_tag sessions_path do %>
<div class="container px-5 py-2 w-50 bg-light">
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], value: "test@fakeaccount.com", class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="form-label"><%= label_tag :password %></div>
    <%= password_field_tag :password, value: "1234" %>
  </div>
 <div class="actions"><%= submit_tag "Log In", class: "btn btn-primary mb-2" %></div>
</div>
<% end %>