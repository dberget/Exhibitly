<p id="notice"><%= notice %></p>

<h3> Settings </h3>

<ul class="mt-5">
  <h4>Users</h4>
   <% @account.users.each do |u| %>
    <li>
     <%= u.email %>
    </li>
   <% end %>
</ul>

<div class="container text-center px-5 py-2 w-50 bg-light">
  <h3> Create Account user </h3>
  <%= form_for @account do |f|%>
  <% if @account.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.fields_for :users_attributes do |u| %>
    <div class="form-group row pt-2">
      <%= u.label :email, class: "form-label" %>
      <%= u.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= u.label :password, class: "form-label" %>
      <%= u.password_field :password, class: "form-control"  %>
    </div>
    <div class="form-group row">
      <%= u.label :password_confirmation, class: "form-label" %>
      <%= u.password_field :password_confirmation, class: "form-control" %>
    </div>
  <% end %>

  <%= f.submit "Create", class: "btn btn-primary"%>
 <% end %>
</div>

